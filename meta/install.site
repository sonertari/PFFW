# include common subroutines and initialization code
. install.sub

DEFAULTSETS=$THESETS

install_sets 2>&1 | tee -a $LOG_FILE

finish_up 2>&1 | tee -a $LOG_FILE

cp $LOG_FILE /root/
fold -s $ROOTDIR/root.mail >> /var/mail/root
rm -f $ROOTDIR/{root.mail,install.sub,install.site}
